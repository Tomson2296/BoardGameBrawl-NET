@page "{Id}"
@using Microsoft.AspNetCore.Identity
@model DeleteUserModel
@{
    ViewData["Title"] = "Delete user";
    ViewData["ActivePage"] = AdminWorkflowsPages.ManageUsers;
}

<div class="container">
    <div class="row">
        <div class="p-3">
            <form method="post">
                <h5 class="text-center m-2 p-2">
                    Do you really want to delete user:  @Model.TargetUser.UserName?
                    <input type="hidden" name="id" value="@Model.TargetUser.Id" />
                </h5>
            </form>
            <br />
            <div class="d-flex flex-row align-items-center justify-content-around text-center">
                <button type="submit" class="btn btn-danger btn-block w-25" disabled="@Model.IsAdmin">Delete</button>
                <a asp-page="ManageUsers" asp-route-PageNumber="1" class="btn btn-secondary btn-block w-25">Cancel</a>
            </div>
        </div>
    </div>
</div>
