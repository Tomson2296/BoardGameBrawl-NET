@page
@model GroupsModel
@{
    ViewData["Title"] = "Check list of groups you belong to";
}

<div class="container">
    <div class="row p-3 mb-3">
        <h3> @ViewData["Title"]</h3>
    </div>
    <div class="row p-3">
        
            @if (Model.PlayerGroups.Count == 0)
            {
                <div class="d-flex flex-wrap text-center justify-content-center align-items-center">
                    <p> It looks like you still not a part of any group. Maybe you would be interested in creating one of your own? </p>
                    <a asp-page="CreateGroup" class="btn btn-block btn-lg w-50 btn-primary"> 
                        Create new Group
                    </a>
                </div>
            }
            else
            {
                @foreach (var group in Model.PlayerGroups)
                {
                    <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6 mb-3 text-center">
                        <a asp-area="Group" asp-page="Index" asp-route-GroupName="@group.GroupName">
                            <div class="card">
                                @if (group.GroupMiniature != null)
                                {
                                    <img src="data:image/*;base64,@(Convert.ToBase64String(group.GroupMiniature!))" class="card-img-top" alt="" width="200" height="200" />
                                }
                                else
                                {
                                    <img src="~/img/group.png" class="card-img-top" alt="" width="200" height="200">
                                }
                                <div class="card-body">
                                    <h6 class="card-title"> @group.GroupName </h6>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            }
        </div>
    </div>
</div>
