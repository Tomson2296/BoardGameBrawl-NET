@page "{BoardgameId:int}"
@model BoardGameBrawl.App.Areas.Boardgame.Pages.ModifyRulesetModel
@{
    ViewData["title"] = "Change ruleset for this boardgame";
}

<partial name="_StatusMessage" for="StatusMessage" />
<div class="container">
    <div class="row">
        <div class="text-center p-3 mb-3">
            <h6>Create a new rule for boardgame: </h6>
        </div>
    </div>
    <div class="row d-flex justify-content-center align-items-center mb-3">
        <form id="matchRule" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.RuleDescription" class="form-control" autocomplete="" aria-required="true" placeholder="" />
                <label asp-for="Input.RuleDescription" class="form-label">Rule Description</label>
                <span asp-validation-for="Input.RuleDescription" class="text-danger"></span>
            </div>
            <div class="checkbox mb-3">
                <label asp-for="Input.RuleDecider" class="form-label">
                    <input class="form-check-input" asp-for="Input.RuleDecider" />
                    @Html.DisplayNameFor(m => m.Input.RuleDecider)
                </label>
            </div>
            <div class="form-floating mb-3">
                <select id="ruleTypesSelect" asp-for="Input.RuleType" asp-items="Model.RuleTypes" class="form-select">
                </select>
                <label for="ruleTypesSelect" class="form-label">Rule Type</label>
            </div>
            <div class="d-flex justify-content-center">
                <button asp-page-handler="AddRuleToBoardgameRuleset" id="rule-submit" type="submit" class="w-50 btn btn-lg btn-primary"> Add rule </button>
            </div>
        </form>
    </div>
    <div class="row d-flex justify-content-center align-items-center mb-3">
        <a asp-page="CheckBoardgameRuleset" asp-route-BoardgameId="@Model.BoardgameId" type="submit" class="w-50 btn btn-lg btn-block btn-secondary">
            Check full Boardgame Ruleset
        </a>
    </div>
    <div class="row d-flex justify-content-center align-items-center">
        <a asp-page="Moderators" asp-route-BoardgameId="@Model.BoardgameId" class="w-50 btn btn-lg btn-success btn-block">
            Back to Moderators Main Page
        </a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}