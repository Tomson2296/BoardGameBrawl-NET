@model IList<BoardGameBrawl.Application.DTOs.Entities.Match_Related.MatchRuleDTO>

<div class="container">
    <div class="text-center p-3 mb-3">
        <h5>Boardgame Rules</h5>
    </div>

    @if (Model.Count == 0)
    {
        <div class="text-center p-3 mb-3">
            <h5> There is no boardgame rules at the moment </h5>
        </div>
    }
    else
    {
        <table class="table table-responsible table-bordered table-hover table-striped text-center text-justify">
            <thead>
                <tr>
                    <td><strong>Type</strong></td>
                    <td colspan="2"><strong>Description</strong></td>
                    <td><strong>Decider</strong></td>
                    <td>Delete rule</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var rule in Model)
                {
                    <tr>
                        <td>@rule.RuleType.ToString()</td>
                        <td colspan="2">@rule.RuleDescription!.ToString()</td>
                        @if (rule.RuleDecider == true)
                        {
                            <td> <img src="~/img/star.png" alt="star" height="32" width="32" /> </td>
                        }
                        else
                        {
                            <td> </td>
                        }
                        <form action="post" name="removeRuleForm">
                        <td>
                            <button asp-area="Boardgame" asp-page="/ModifyRuleset" asp-page-handler="RemoveRuleFromRuleset"
                                    id="rule-submit" type="submit" class="w-75 btn btn-lg btn-secondary" value="@rule.RuleId">
                                Remove rule
                            </button>
                        </td>
                        </form>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>