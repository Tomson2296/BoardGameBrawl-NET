@page "{GroupName}"
@model BoardGameBrawl.App.Areas.Group.Pages.IndexModel
@{
    ViewData["Title"] = "Main Group Page";
    ViewData["TableGroupDesc"] = "Group's Description";
}

<div class="containter">
    <div class="row p-3 mb-3">
        <h3>@ViewData["Title"]</h3>
    </div>

    <div class="row text-center">
        <h2>
            @Model.TargetGroup!.GroupName
        </h2>
    </div>
    <div class="row mb-3">
        @if (Model.TargetGroup.GroupMiniature != null)
        { 
        <div class="d-flex justify-content-center">
            <img src="data:image/*;base64,@(Convert.ToBase64String(Model.TargetGroup.GroupMiniature!))" class="img-fluid img-thumbnail img-round" alt=""
                 width="300" height="300" />
        </div>
        }
        else
        {
        <div class="d-flex justify-content-center">
            <img src="~/img/group.png" class="img-fluid img-thumbnail img-round" alt="" width="300" height="300" />
        </div>
        }
    </div>

    <div class="row mb-3">
        <table class="table table-responsible table-bordered table-hover table-striped text-center text-justify">
            <tbody>
                <tr>
                    <td>
                       <strong> @ViewData["TableGroupDesc"] </strong> 
                    </td>
                </tr>
                <tr>
                        @if (Model.TargetGroup.GroupDescription == null)
                        {
                            <td>
                                No group description
                            </td>
                        }
                        else
                        {
                            <td>
                                @Model.TargetGroup.GroupDescription
                            </td>
                        }
                </tr>
            </tbody>
        </table>
    </div>
</div>

<style>
    .img-round {
        border: 2px solid black;
        border-radius: 50%;
    }
</style>