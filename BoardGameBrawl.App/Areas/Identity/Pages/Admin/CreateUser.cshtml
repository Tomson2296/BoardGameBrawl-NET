@page
@model CreateUserModel
@{
    ViewData["Title"] = "Create a new User";
    ViewData["ActivePage"] = AdminWorkflowsPages.CreateUser;
}

<h3> @ViewData["Title"] </h3>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="container">
    <div class="row">
        <div class="p-3">
            <form id="user-form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Username" class="form-control" auto-complete="" aria-required="true"/> 
                    <label asp-for="Input.Username" class="form-label"> Username </label>
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" auto-complete="" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"> Email </label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" auto-complete="" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"> Password </label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Phone" class="form-control" auto-complete="" />
                    <label asp-for="Input.Phone" class="form-label"> Phone </label>
                    <span asp-validation-for="Input.Phone" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.FirstName" class="form-control" auto-complete="" />
                    <label asp-for="Input.FirstName" class="form-label"> First Name</label>
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.LastName" class="form-control" auto-complete="" />
                    <label asp-for="Input.LastName" class="form-label"> Last Name </label>
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.BGGUsername" class="form-control" auto-complete="" />
                    <label asp-for="Input.BGGUsername" class="form-label"> BGGUsername </label>
                    <span asp-validation-for="Input.BGGUsername" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <textarea asp-for="Input.UserDescription" class="form-control" auto-complete=""></textarea>
                    <label asp-for="Input.UserDescription" class="form-label"> User Description </label>
                    <span asp-validation-for="Input.UserDescription" class="text-danger"></span>
                </div>

                <button id="createSubmit" type="submit" class="w-100 btn btn-lg btn-primary btn-block">Register</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}